<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:id="@+id/AlarmItem"
    android:columnCount="2"
    android:rowCount="7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-light"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/time"
        android:textColor="@android:color/white"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="end|center_vertical"
        android:layout_row="0"
        android:layout_column="1"
        android:id="@+id/active"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/repeat"
        android:text="@string/txt_repeat"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/id_alarm"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_ringtone"
        android:drawableLeft="@drawable/ic_ringtone"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/btn_ringtone"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/ringtone_uri"
        android:visibility="gone"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="end"
        android:layout_row="2"
        android:layout_column="1"
        android:id="@+id/vibrate"
        android:text="@string/txt_vibrate"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginStart="16dp"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginEnd="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_row="3"-->
        <!--android:layout_column="0"-->
        <!--android:layout_columnSpan="2">-->

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/label"-->
            <!--android:hint="@string/label_hint"-->
            <!--android:visibility="gone"/>-->
    <!--</android.support.design.widget.TextInputLayout>-->

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/label_hint"
        android:paddingBottom="12dp"
        android:paddingEnd="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="12dp"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:visibility="gone"/>

    <View
        android:id="@+id/hairline_label"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/hairline"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:visibility="gone" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:layout_row="5"
        android:layout_column="0"
        android:id="@+id/btn_delete"
        android:background="@drawable/dic_delete"
        android:visibility="gone"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="end"
        android:layout_row="5"
        android:layout_column="1"
        android:id="@+id/btn_expand"
        android:background="@drawable/dic_expand"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="end"
        android:layout_row="5"
        android:layout_column="1"
        android:id="@+id/btn_collapse"
        android:background="@drawable/dic_collapse"
        android:visibility="gone"/>

    <View
        android:id="@+id/hairline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/hairline"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2" />

</GridLayout>